extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/pages/product-list.css")
    link(rel="stylesheet", href="/css/pages/admin-products.css")

block content
    main#products-page
        h1.page-title products
        if hasProducts
            section#products-container
                each product in prods
                    article.product-item
                        header.card-header
                            h2.product-title #{product.title}
                        // div
                        .card-image
                            img(src=product.imageUrl, alt=product.title)
                        .card-content
                            h3.product-price $#{product.price}
                            p.product-description #{product.description}
                        .card-actions
                            a(href="/admin/edit-product" class="edit-btn") Edit
                            form(action="/admin/delete-product" method="POST" class="delete-product-form")
                                button(type="submit", class="delete-btn") Delete
        else
            h2 No Products... :(

            